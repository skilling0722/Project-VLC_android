<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pwd_Register">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="비밀번호 확인"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/new_pwd_btn2"
        app:layout_constraintStart_toStartOf="@+id/pwd_name1" />

    <TextView
        android:id="@+id/pwd_change_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="비밀번호 등록"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <EditText
        android:id="@+id/new_pwd_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/new_pwd_btn1"
        app:layout_constraintTop_toBottomOf="@+id/new_pwd_btn1" />

    <TextView
        android:id="@+id/pwd_name1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="56dp"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/new_pwd_btn1"
        app:layout_constraintEnd_toStartOf="@+id/new_pwd_btn1" />

    <EditText
        android:id="@+id/new_pwd_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/pwd_change_text"
        app:layout_constraintTop_toBottomOf="@+id/pwd_change_text" />

    <Button
        android:id="@+id/pwd_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:onClick="pwd_confirm"
        app:layout_constraintEnd_toEndOf="@+id/new_pwd_btn2"
        app:layout_constraintTop_toBottomOf="@+id/new_pwd_btn2" />

</android.support.constraint.ConstraintLayout>